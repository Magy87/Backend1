<h1 class="Titulo">Libra</h1>
<h3>Productos</h3>
<div class="container-products">
    {{#if products.length}}
    {{#each products}}
    <div class="card">
        <h3 class="card-title">{{title}}</h3>
        <img class="card-img" src="{{img}}" />



        <div class="card-info">
            <span class="card-price"> ${{price}} ARG</span>
            <span class="card-stock">Stock: {{stock}}</span>
        </div>
        <div class="container-btn">
            <button class="btn-delete" data-id="{{_id}}">Eliminar</button>
            <a href="/update-product/{{_id}}" class="btn btn-update">Actualizar</a>
        </div>

    </div>


    {{/each}}
    {{else}}
    <p>No hay productos disponibles</p>
    {{/if}}
</div>

<script src="/static/js/edit-product.js"></script>


